<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/text_comment_body"
        style="@android:style/Widget.TextView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="16dp"
        android:lineSpacingMultiplier="1.2"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textSize="13sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Thank you and the OP! Even adding a new mov2 instruction as exact copy of mov into gnu assembler was a big struggle for me, we had to go to their IRC channel, i looking forward to dig into"
        />

    <TextView
        android:id="@+id/text_comment_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="0dp"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_comment_body"
        tools:text="kosteralo" />

    <TextView
        android:id="@+id/text_comment_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:drawableStart="@drawable/ic_access_time_black_24dp"
        android:drawablePadding="4dp"
        tools:text="6h"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/text_comment_user"
        app:layout_constraintStart_toEndOf="@+id/text_comment_user" />

    <TextView
        android:id="@+id/text_comment_vote"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="6dp"
        android:textColor="@color/link_color"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_comment_time"
        app:layout_constraintStart_toEndOf="@id/text_comment_time"
        android:text="@string/vote"/>

    <TextView
        android:id="@+id/text_comment_replies"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="@string/show_replies"
        android:textColor="@color/link_color"
        android:textSize="12sp"
        app:layout_constraintBaseline_toBaselineOf="@id/text_comment_vote"
        app:layout_constraintStart_toEndOf="@+id/text_comment_vote" />

    <View
        android:id="@+id/comment_divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="6dp"
        android:background="@color/lt_gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_comment_user" />


</androidx.constraintlayout.widget.ConstraintLayout>